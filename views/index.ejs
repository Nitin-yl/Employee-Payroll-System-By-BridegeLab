        const net = emp.salary - tax;
    %>

    <tr>
        <td><%=emp.name %></td>
        <td><%=emp.Gender %></td>
        <td><%=emp.position %></td>
        <td><%=emp.DateOfJoining %></td>
        <td><%=emp.salary %></td>
        <td><%=tax.toFixed(2) %></td>
